# Staging Environment Variables
# Copy this to .env.local to use staging environment locally

# Supabase - Staging Project
NEXT_PUBLIC_SUPABASE_URL=https://<STAGING_REF>.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=<staging-anon-key>
SUPABASE_SERVICE_ROLE_KEY=<staging-service-role-key>

# Site URLs - Staging
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SUPABASE_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database URL (for migrations)
DATABASE_URL=postgresql://postgres:<password>@db.<STAGING_REF>.supabase.co:5432/postgres

# Claim Token Secret (use different value from production)
CLAIM_TOKEN_SECRET=<generate-new-random-secret-for-staging>

# Cloudflare Stream (staging account or same as prod)
CLOUDFLARE_ACCOUNT_ID=<staging-or-prod-account-id>
CLOUDFLARE_API_TOKEN=<staging-or-prod-api-token>

# Note: To generate CLAIM_TOKEN_SECRET:
# node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
